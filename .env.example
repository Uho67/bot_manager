# Docker Compose Configuration
COMPOSE_PROJECT_NAME=bot_api

# HTTP/HTTPS Ports
HTTP_PORT=80
HTTPS_PORT=443

# MySQL Configuration
MYSQL_VERSION=8.0
MYSQL_DATABASE=bot_api_db
MYSQL_USER=bot_api_user
MYSQL_PASSWORD=change_this_password_in_production
MYSQL_ROOT_PASSWORD=change_this_root_password

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# Symfony Backend Configuration
APP_ENV=prod
APP_SECRET=change_this_to_a_random_secret_key_min_32_chars
DATABASE_URL=mysql://bot_api_user:change_this_password_in_production@database:3306/bot_api_db?serverVersion=8.0&charset=utf8mb4
REDIS_URL=redis://:change_this_redis_password@redis:6379

# CORS Configuration
CORS_ALLOW_ORIGIN=^https?://(localhost|yourdomain\.com)(:[0-9]+)?$

# JWT Authentication
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=change_this_jwt_passphrase

# Telegram Bot (if applicable)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# NestJS Configuration (Optional - for future use)
NESTJS_PORT=3000

# Domain Configuration
DOMAIN=yourdomain.com

