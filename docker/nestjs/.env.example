# NestJS Environment Variables

# Application
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=mysql://bot_api_user:change_this_password_in_production@database:3306/bot_api_db

# Redis
REDIS_URL=redis://:change_this_redis_password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# JWT
JWT_SECRET=change_this_to_a_random_secret_key
JWT_EXPIRATION=3600

# CORS
CORS_ORIGIN=https://yourdomain.com

# API
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=info

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

