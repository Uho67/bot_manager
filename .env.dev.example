# Docker Compose Configuration
COMPOSE_PROJECT_NAME=bot_api_dev

# HTTP Port (changed to 8080 to avoid conflicts)
HTTP_PORT=8080

# MySQL Configuration
MYSQL_VERSION=8.0
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=app
MYSQL_ROOT_PASSWORD=root

# Redis Configuration
REDIS_PASSWORD=redis

# Symfony Backend Configuration
APP_ENV=dev
APP_SECRET=dev_secret_change_this_for_production
DATABASE_URL=mysql://app:app@database:3306/app?serverVersion=8.0&charset=utf8mb4
REDIS_URL=redis://:redis@redis:6379

# CORS Configuration (allow all in dev)
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$

# JWT Authentication
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=dev_jwt_passphrase

# Xdebug Configuration
XDEBUG_MODE=debug

# Telegram Bot (for testing)
TELEGRAM_BOT_TOKEN=your_test_bot_token_here

